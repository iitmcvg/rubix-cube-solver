CXX=g++
CC=gcc
CXXFLAGS=-ggdb `pkg-config --cflags --libs opencv`
CCFLAGS=-lGL -lGLU -lglut -lm
all: Rubix Config
Rubix:Rubix_main.o
#	gcc Rubix_main.c -lGL -lGLU -lglut -lm -o Rubix
	$(CC) $^ $(CCFLAGS) -o $@
Config:cubeconfig.o
#	g++ cubeconfig.cpp -ggdb `pkg-config --cflags --libs opencv` -o Config 
	$(CXX) $^ $(CXXFLAGS) -o $@

